<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="Text.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/hero_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">.08</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title.Light" parent="@style/Text.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.BackToFrizzl" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:background">@drawable/back_to_frizzl_button_background</item>
    </style>

    <style name="Text.BackToFrizzl" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/calibri_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>


</resources>
